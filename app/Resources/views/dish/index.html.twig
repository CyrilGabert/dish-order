{% extends 'base.html.twig' %}

{% block body %}
    <h1>Dishes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td><a href="{{ path('dish_show', { 'id': dish.id }) }}">{{ dish.id }}</a></td>
                <td>{{ dish.name }}</td>
                <td>{{ dish.category }}</td>
                <td>{{ dish.price }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('dish_show', { 'id': dish.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('dish_edit', { 'id': dish.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dish_new') }}">Create a new dish</a>
        </li>
    </ul>
{% endblock %}
